# Переключение базы данных (True - MySQL, False - SQLite)
USE_MYSQL=False

# База данных MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=photoshop_web

# Flask настройки
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Другие настройки
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216
